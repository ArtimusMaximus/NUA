datasource db {
  url      = "file: nodeunifi.db"
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Credentials {
  id                    Int          @id @default(autoincrement())
  username              String?
  password              String?
  hostname              String?
  port                  Int?
  sslverify             Boolean?
  theme                 String?
  refreshRate           Int?
  defaultPage           String?
  initialSetup          Boolean?
}

model Device {
  id                    Int          @id @default(autoincrement())
  name                  String
  macAddress            String
  active                Boolean
  createdAt             DateTime     @default(now())
  crons                 Cron[]
  order                 Int?
}

model Cron {
  id                    Int          @id @default(autoincrement())
  createdAt             DateTime     @default(now())
  crontime              String
  crontype              String
  jobName               String?
  device                Device?      @relation(fields: [deviceId], references: [id])
  deviceId              Int?
  toggleCron            Boolean?
}


model TrafficRules {
  id                    Int          @id @default(autoincrement())
  createdAt             DateTime     @default(now())
  unifiId               String
  app_category_ids      AppCatIds[]
  app_ids               AppIds[]
  target_devices        TargetDevice[]
  trafficRuleDevices    TrafficRuleDevices[]
  description           String
  enabled               Boolean
  blockAllow            String
}

model AppCatIds {
  id                    Int          @id @default(autoincrement())
  createdAt             DateTime     @default(now())
  app_cat_id            Int
  app_cat_name          String?
  trafficRules          TrafficRules @relation(fields: [trafficRulesId], references: [id])
  trafficRulesId        Int
}

model AppIds {
  id                    Int          @id @default(autoincrement())
  createdAt             DateTime     @default(now())
  app_id                Int
  app_name              String?
  trafficRules          TrafficRules @relation(fields: [trafficRulesId], references: [id])
  trafficRulesId        Int
}

model TargetDevice {
  id                    Int          @id @default(autoincrement())
  createdAt             DateTime     @default(now())
  client_mac            String
  type                  String
  trafficRules          TrafficRules @relation(fields: [trafficRulesId], references: [id])
  trafficRulesId        Int
}
model TrafficRuleDevices {
  id                    Int          @id @default(autoincrement())
  createdAt             DateTime     @default(now())
  deviceName            String
  deviceId              Int
  macAddress            String
  trafficRules          TrafficRules @relation(fields: [trafficRulesId], references: [id])
  trafficRulesId        Int
}


